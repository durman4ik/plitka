.dashboard
  = render 'dashboards/menu'
  .dashboard-main-wrapper
    .blocks
      // Services.
      .block.services
        %h2.head.info
          = 'Сейчас мы оказываем услуги:'
          %span.link-add
            = image_tag 'add.png', class: 'link-add service-add'
        .services-list
          = render 'services/services'
      // Advantages.
      .block.advantages
        %h2.head.info
          = 'Наши преимущества:'
          %span.link-add
            = image_tag 'add.png', class: 'link-add advantage-add'
        .advantages-list
          = render 'advantages/advantage'
      // Phones.
      .block.phones
        %h2.head.info
          = 'Наши номера телефонов:'
        .phones-list
          = render 'phones/phone'
    // Services form.
    .new-service-form{data: {state: 'hidden'}}
      .form
        %h2.head
          = 'Наша новая услуга:'
          %span.close-link
            = image_tag 'close.png'
        = form_for :service, url: dashboards_services_path do |f|
          = f.text_field :title_ru, placeholder: 'Название на русском'
          = f.text_field :title_by, placeholder: 'Название на беларусском'
          = f.submit 'Save', class: 'btn'
    // Advantages form.
    .new-advantage-form{data: {state: 'hidden'}}
      .form
        %h2.head
          = 'Наше новое преимущество:'
          %span.close-link
            = image_tag 'close.png'
        = form_for :advantage, url: dashboards_advantages_path do |f|
          = f.text_field :title_ru, placeholder: 'Название на русском'
          = f.text_field :title_by, placeholder: 'Название на беларусском'
          = f.file_field :image, prompt: 'Выберите изображение', class: 'image'
          = f.submit 'Save', class: 'btn'
    .notifications
      = render 'static/error'

