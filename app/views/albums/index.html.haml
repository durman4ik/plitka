= render 'static/header'
.portfolio
  .wrapper.flex
    .albums
      - @albums.each do |album|
        = link_to album_path(album) do
          .album
            .title
              - if I18n.locale.to_s == 'ru' || album.title_by.blank?
                = album.title_ru
              - else
                = album.title_by
            %br
            .image-counter
              %span
                = 'Изображений в альбоме:'
                = album.images.length
            .details
              = 'Просмотреть..'

            -#.image
            -#  = image_tag (album.images.first.url.url || Album::DEFAULT_IMAGE), width: '150px'
