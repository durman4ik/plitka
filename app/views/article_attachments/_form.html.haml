= form_for @article_attachment do |f|
  - if @article_attachment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article_attachment.errors.count, "error")} prohibited this article_attachment from being saved:"
      %ul
        - @article_attachment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :article_id
    = f.number_field :article_id
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
